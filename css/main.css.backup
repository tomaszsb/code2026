/* main.css - Primary stylesheet with core layout and UI elements */
console.log('main.css file is beginning to be used');

/* General styling */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #ffffff;
  color: #333;
}

/* Create a consistent grid template that ensures proper alignment */
:root {
  --grid-template: minmax(15%, 1fr) minmax(25%, 1fr) minmax(60%, 1fr); /* Minimize board area, expand info panels */
  --main-width: 100%; /* Total width of the content area */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --border-radius-sm: 0.25rem;
  --border-radius-md: 0.5rem;
  --border-radius-lg: 1rem;
  --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.1);
  --shadow-md: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
}

/* Apply consistent box sizing to all elements */
*, *:before, *:after {
  box-sizing: border-box;
}

/* Main containers */
.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 100%;
  margin: 0 auto;

}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1px solid #ddd;
}

.turn-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.game-header h1 {
  margin: 0;
  font-size: 1.8em;
  color: #444;
}

.player-turn-indicator {
  font-weight: bold;
  color: #4285f4;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--border-radius-sm);
  background-color: #e8f0fe;
  margin-right: var(--spacing-md);
}

/* game-content removed - redundant wrapper */

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: visible;
  position: relative;
  clear: both;
  width: 100%;
  max-width: 100%;
  margin: var(--spacing-sm) auto 0;
}

/* Layout containers */
.board-and-explorer-container,
.info-panels-container {
  width: 100%;
  max-width: 100%;
  margin: 0 auto var(--spacing-sm) auto;
  padding: 0;
  overflow: visible;
  display: grid;
  grid-template-columns: var(--grid-template);
  gap: var(--spacing-sm);
}

.board-and-explorer-container .player-panel,
.board-and-explorer-container .game-board-wrapper {
  grid-column: 1 / 3; /* Span first two columns when Space Explorer is shown */
  min-height: 20vh;
  overflow: visible;
  width: 100%;
}

.info-panels-container {
  min-height: 50vh;
}

/* Board container and Space Explorer */
.space-explorer-container {
  background-color: white;
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-md);
  padding: var(--spacing-md);
  grid-column: 3 / 4; /* Place Space Explorer in the third column */
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  max-height: 80vh;
  z-index: 100;
  width: 100%;
  min-width: 50%;
  max-width: 50%; /* Much wider to match the player panel */
  margin-right: 0; /* Hug the right side */
  justify-self: end; /* Align to right side of grid cell */
}

/* Player panels and Game Board Wrapper */
.player-panel,
.game-board-wrapper {
  background-color: white;
  border-radius: var(--border-radius-md);
  box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1);
  padding: var(--spacing-sm);
  display: flex;
  flex-direction: column;
}

.info-panels-container .player-panel:first-child {
  grid-column: 1 / 2; /* First column */
  min-height: 50vh !important; /* Reasonable minimum height */
  max-height: 75vh !important; /* Prevent excessive height */
  height: auto !important; /* Allow content-based height */
  overflow: visible !important; /* Remove any overflow restrictions */
}

.info-panels-container .player-panel.middle-panel {
  grid-column: 2 / 3; /* Middle (second) column */
  z-index: 600; /* Above turn transition overlay (500) */
  position: relative;
}

.info-panels-container .player-panel:last-child {
  grid-column: 3 / 4; /* Last column */
}

.space-effect-container {
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.players-list {
  margin-bottom: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.game-controls {
  padding: var(--spacing-md) 0;
  display: flex;
  justify-content: flex-start;
  border-top: 1px solid #ddd;
  margin-top: var(--spacing-md);
}

/* Button styling */
button {
  background-color: #4285f4;
  color: white;
  border: none;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius-sm);
  cursor: pointer;
  font-weight: bold;
  margin-right: var(--spacing-md);
}

button:hover {
  background-color: #3367d6;
}

button:disabled {
  background-color: #cccccc;
  cursor: not-allowed;
}

.end-turn-btn {
  background-color: #ea4335;
}

.end-turn-btn:hover {
  background-color: #d62516;
}

.instructions-btn {
  background-color: #34a853;
  margin: 0;
}

.instructions-btn:hover {
  background-color: #2d9249;
}

.reset-game-btn {
  background-color: #f44336;
  margin: 0;
}

.reset-game-btn:hover {
  background-color: #d32f2f;
}

.roll-dice-btn {
  background-color: #fbbc05;
  color: #333;
  margin-top: var(--spacing-md);
  width: 100%;
}

.roll-dice-btn:hover {
  background-color: #f2a600;
}

.roll-dice-btn.used {
  background-color: #cccccc;
  color: #666666;
  cursor: not-allowed;
}

.toggle-cards-btn {
  background-color: #9c27b0;
  color: white;
  border: none;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius-sm);
  cursor: pointer;
  font-weight: bold;
  margin: 0 var(--spacing-xs);
}

.toggle-cards-btn:hover {
  background-color: #7b1fa2;
}

/* Instructions panel */
.instructions-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.instructions-content {
  background-color: white;
  border-radius: var(--border-radius-md);
  width: 80%;
  max-width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-lg);
}

.instructions-content h2 {
  margin-top: 0;
  color: #4285f4;
  border-bottom: 1px solid #e0e0e0;
  padding-bottom: var(--spacing-md);
}

.instruction-section {
  margin-bottom: var(--spacing-xl);
}

.instruction-section h3 {
  color: #333;
  margin-bottom: var(--spacing-md);
}

.instruction-item {
  margin-bottom: var(--spacing-lg);
}

.instruction-item h4 {
  margin: 0 0 var(--spacing-xs) 0;
  color: #4285f4;
}

.instruction-item p {
  margin: 0;
  line-height: 1.5;
}

.close-instructions-btn {
  margin-top: var(--spacing-xl);
  background-color: #ea4335;
}

.close-instructions-btn:hover {
  background-color: #d62516;
}

/* Game end and error screens */
.game-end-screen,
.error-screen {
  background-color: white;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-xl);
  width: 80%;
  max-width: 80%;
  margin: var(--spacing-xl) auto;
  text-align: center;
  box-shadow: var(--shadow-md);
}

.game-end-screen h2 {
  color: #4285f4;
  margin-top: 0;
}

.error-screen h2 {
  color: #ea4335;
  margin-top: 0;
}

.player-scores {
  text-align: left;
  margin: var(--spacing-xl) 0;
}

.player-scores ul {
  list-style-type: none;
  padding: 0;
}

.player-scores li {
  padding: var(--spacing-sm) 0;
  border-bottom: 1px solid #eee;
}

.new-game-btn {
  background-color: #34a853;
  padding: var(--spacing-md) var(--spacing-xl);
  margin-top: var(--spacing-md);
}

.new-game-btn:hover {
  background-color: #2d9249;
}

.error-screen button {
  background-color: #4285f4;
  padding: var(--spacing-md) var(--spacing-xl);
  margin-top: var(--spacing-xl);
}

/* Loading screen */
.loading-placeholder {
  text-align: center;
  padding: 5vh var(--spacing-xl);
}

.loading-placeholder h2 {
  color: #4285f4;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes cardFlipIn {
  0% {
    transform: translateY(100vh) rotateY(90deg);
    opacity: 0;
  }
  30% {
    transform: translateY(0) rotateY(20deg);
    opacity: 1;
  }
  70% {
    transform: translateY(0) rotateY(-10deg);
  }
  100% {
    transform: translateY(0) rotateY(0);
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(39, 174, 96, 0.7), 0 5px 15px rgba(0, 0, 0, 0.2);
  }
  70% {
    box-shadow: 0 0 0 0.375rem rgba(39, 174, 96, 0), 0 0.313rem 0.938rem rgba(0, 0, 0, 0.2);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(39, 174, 96, 0), 0 0.313rem 0.938rem rgba(0, 0, 0, 0.2);
  }
}

